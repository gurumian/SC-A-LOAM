<launch>
    
    <!-- nodes -->
    <node pkg="aloam_velodyne" exec="alaserPGO" name="alaserPGO" output="screen">
        <!-- <param name="scan_line" type="int" value="64" /> -->

        <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
        <param name="mapping_skip_frame" type="int" value="1" />

        <!-- remove too closed points -->
        <param name="minimum_range" type="float" value="0.5"/>

        <param name="mapping_line_resolution" type="float" value="0.4"/> <!-- A-LOAM -->
        <param name="mapping_plane_resolution" type="float" value="0.8"/> <!-- A-LOAM -->

        <!-- SC-A-LOAM -->
        <param name="keyframe_meter_gap" type="float" value="1.0"/> 

        <!-- Scan Context -->
        <param name="sc_dist_thres" type="float" value="0.2"/> <!-- SC-A-LOAM, if want no outliers, use 0.1-0.15 -->
        <!-- <param name="sc_max_radius" type="float" value="40.0"/> 20 or 40 for indoor -->
        <param name="sc_max_radius" type="float" value="40.0"/> <!-- for outdoor -->

        <!-- for MulRan -->
        <!-- <param name="lidar_type" type="str" value="OS1-64"/>  -->
        <!-- <remap from="/velodyne_points" to="/os1_points"/> -->

        <!-- utils -->
        <param name="save_directory" type="str" value="/mnt/aloam/data/"/>  <!-- CHANGE THIS and end with / -->

        <remap from="/velodyne_cloud_registered_local" to="/cloud_registered_lidar" />
        <remap from="/aft_mapped_to_init" to="/Odometry" />
    </node>
    
    <!-- visulaization -->
    <!-- <arg name="rviz" default="true" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find aloam_velodyne)/rviz_cfg/aloam_velodyne.rviz" />
    </group> -->

</launch>
